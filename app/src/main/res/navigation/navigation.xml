<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.uc.ccs.visuals.screens.main.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" >
        <action
            android:id="@+id/action_mapFragment_to_primaryChangeAccountDialogFragment"
            app:destination="@id/primaryChangeAccountDialogFragment" />
        <action
            android:id="@+id/action_mapFragment_to_settingsDialogFragment"
            app:destination="@id/settingsDialogFragment" />
    </fragment>

    <dialog
        android:id="@+id/primaryChangeAccountDialogFragment"
        android:name="com.uc.ccs.visuals.screens.main.SignListDialogFragment"
        android:label="PrimaryChangeAccountDialogFragment">
    </dialog>

    <dialog
        android:id="@+id/settingsDialogFragment"
        android:name="com.uc.ccs.visuals.screens.settings.SettingsDialogFragment"
        android:label="settingsDialogFragment">
        <action
            android:id="@+id/action_settingsDialogFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </dialog>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.uc.ccs.visuals.screens.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_splashScreenFragment"
            app:destination="@id/splashScreenFragment"
            app:popUpTo="@id/mapFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.uc.ccs.visuals.screens.splashscreen.SplashFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_introFragment"
            app:destination="@id/introFragment" />
        <action
            android:id="@+id/action_splashScreenFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
        <action
            android:id="@+id/action_splashScreenFragment_to_adminDashboardFragment"
            app:destination="@id/adminDashboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <!-- <action
            android:id="@+id/action_signupFragment_to_splashScreenFragment"
            app:destination="@id/splashScreenFragment" /> -->
        <action
            android:id="@+id/action_signupFragment_to_emailVerificationFragment"
            app:destination="@id/emailVerificationFragment"
            app:popUpTo="@id/emailVerificationFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/introFragment"
        android:name="com.uc.ccs.visuals.screens.intro.IntroFragment"
        android:label="fragment_intro"
        tools:layout="@layout/fragment_intro" >
        <action
            android:id="@+id/action_introFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>
    <fragment
        android:id="@+id/adminDashboardFragment"
        android:name="com.uc.ccs.visuals.screens.admin.AdminDashboardFragment"
        android:label="AdminDashboardFragment" >
        <action
            android:id="@+id/action_adminDashboardFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/emailVerificationFragment"
        android:name="com.uc.ccs.visuals.screens.signup.EmailVerificationFragment"
        android:label="EmailVerificationFragment"
        tools:layout="@layout/fragment_email_verification" >
        <action
            android:id="@+id/action_emailVerificationFragment_to_splashScreenFragment"
            app:destination="@id/splashScreenFragment" />
    </fragment>

</navigation>
