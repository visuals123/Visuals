<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set the background color -->
    <solid android:color="@color/white" />

    <padding android:left="@dimen/padding_standard" android:right="@dimen/padding_standard"/>

    <!-- Set the border radius for the top left and top right corners -->
    <corners
        android:topLeftRadius="@dimen/corner_radius_standard"
        android:topRightRadius="@dimen/corner_radius_standard" />
</shape>
