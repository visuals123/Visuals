<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Visuals" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_blue_500</item> <!-- blue -->
        <item name="colorPrimaryVariant">@color/md_blue_700</item> <!-- darker shade of blue -->
        <item name="colorOnPrimary">@color/md_white_1000</item> <!-- white -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_blue_500</item> <!-- light orange -->
        <item name="colorSecondaryVariant">@color/colorAccent</item> <!-- darker shade of orange -->
        <item name="colorOnSecondary">@color/md_black_1000</item> <!-- black -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Visuals.NoActionBar" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_blue_500</item> <!-- blue -->
        <item name="colorPrimaryVariant">@color/md_blue_700</item> <!-- darker shade of blue -->
        <item name="colorOnPrimary">@color/md_white_1000</item> <!-- white -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_blue_500</item> <!-- light orange -->
        <item name="colorSecondaryVariant">@color/colorAccent</item> <!-- darker shade of orange -->
        <item name="colorOnSecondary">@color/md_black_1000</item> <!-- black -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.App.MapFields" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:paddingStart">@dimen/padding_ssmedium</item>
        <item name="android:paddingEnd">@dimen/padding_ssmedium</item>
        <item name="android:editable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">true</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog_fragment</item>
        <item name="android:windowMinWidthMajor">@dimen/corner_radius_standard</item>
        <item name="android:windowMinWidthMinor">@dimen/corner_radius_standard</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="LoginTextInputOuterFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
    </style>

    <style name="LoginTextInputInnerFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>